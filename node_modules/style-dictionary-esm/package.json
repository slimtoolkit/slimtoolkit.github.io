{
  "name": "style-dictionary-esm",
  "version": "1.0.15",
  "packageManager": "pnpm@7.9.5",
  "node": ">=14.16",
  "description": "Style once, use everywhere. A build system for creating cross-platform styles.",
  "keywords": [
    "style dictionary",
    "style",
    "dictionary",
    "amazon",
    "css",
    "design",
    "properties",
    "tokens",
    "sass",
    "scss",
    "iOS",
    "Android",
    "react",
    "react native",
    "style guide"
  ],
  "homepage": "https://github.com/amzn/style-dictionary",
  "bugs": {
    "url": "https://github.com/amzn/style-dictionary/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/amzn/style-dictionary.git"
  },
  "license": "Apache-2.0",
  "author": "Amazon",
  "contributors": [
    "Yuliya Baran <baranyu@amazon.com>",
    "Charles Dorner <dornerc@amazon.com>",
    "Dustin Boudreau <boudrd@amazon.com>",
    "Danny Banks <djb@amazon.com>",
    "YaÃ«l Guilloux <yael@ipseity.fr>"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "types/index.d.ts",
  "bin": {
    "style-dictionary": "./bin/style-dictionary.js"
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "LICENSE",
    "NOTICE",
    "types"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch src",
    "install-cli": "npm install -g $(npm pack)",
    "lint": "eslint --fix \"src/**/*.js\" \"__tests__/**/*.js\" \"__integration__/**/*.js\" \"types/**/*.ts\"",
    "prepare": "husky install",
    "release": "release-it",
    "serve-docs": "docsify serve docs -p 3000 -P 12345",
    "test": "pnpm run test:types && pnpm run lint",
    "test:types": "tsd",
    "test:watch": "pnpm run test:types && pnpm run lint && vitest --segfault-retry=3",
    "test:run": "vitest --segfault-retry=3 --run",
    "test:ui": "vitest --segfault-retry=3 --ui"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "pnpm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "change-case": "^4.1.2",
    "commander": "^9.4.0",
    "consola": "^2.15.3",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "jiti": "^1.15.0",
    "json5": "^2.2.1",
    "jsonc-parser": "^3.2.0",
    "lodash.template": "^4.5.0",
    "tinycolor2": "^1.4.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.26.3",
    "@babel/preset-env": "^7.19.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@vitest/ui": "^0.23.1",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "lint-staged": "^13.0.3",
    "pathe": "^0.3.7",
    "release-it": "^15.4.1",
    "sass": "^1.54.9",
    "stylus": "^0.59.0",
    "tsd": "^0.23.0",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3",
    "unplugin-auto-import": "^0.11.2",
    "vitest": "^0.23.1",
    "yaml": "^2.1.1"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*"
      ]
    }
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build"
      ]
    },
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
